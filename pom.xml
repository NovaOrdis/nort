<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <name>Nova Ordis Release Tool (NORT)</name>

    <groupId>io.novaordis.nort</groupId>
    <artifactId>NORT</artifactId>
    <version>1.1.7</version>
    <packaging>pom</packaging>

    <properties>

        <!--
            Dependencies
        -->

        <clad.version>3.5.1</clad.version>

        <slf4j.version>1.7.12</slf4j.version>
        <snakeyaml.version>1.17</snakeyaml.version>

        <!--
            End of Dependencies
        -->
    </properties>

    <modules>
        <module>main</module>
        <module>release</module>    
    </modules>

    <dependencies>
        <dependency>
            <groupId>io.novaordis.clad</groupId>
            <artifactId>novaordis-clad</artifactId>
            <version>${clad.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.yaml</groupId>
            <artifactId>snakeyaml</artifactId>
            <version>${snakeyaml.version}</version>
        </dependency>
    </dependencies>



</project>
